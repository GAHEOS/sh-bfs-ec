<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_loyalty_rule_form" model="ir.ui.view">
            <field name="name">loyalty.rule.form</field>
            <field name="model">loyalty.rule</field>
            <field name="inherit_id" ref="loyalty.loyalty_rule_view_form"/>
            <field name="arch" type="xml">
                <field name="product_tag_id" position="after">
                    <field name="condition_type"/>
                    <field name="product_value_ids" widget="many2many_tags"/>
                    <field name="family_ids" widget="many2many_tags"/>
                    <field name="brand_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>
    </data>
</odoo>